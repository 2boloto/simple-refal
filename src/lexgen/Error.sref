//FROM Library
$EXTERN WriteLine, Exit, StrFromInt;


$ENTRY Error {
  e.Text = <WriteLine e.Text> <Exit 1>;
}

$ENTRY ErrorAt {
  (s.Number e.File) e.Text =
    <Error e.File ':' <StrFromInt s.Number> ':ERROR: ' e.Text>;
}

$ENTRY Warning {
  e.Message = <WriteLine 'WARNING: ' e.Message>;
}

$ENTRY WarningAt {
  (s.Number e.File) e.Message =
    <WriteLine e.File ':' <StrFromInt s.Number> ':WARNING: ' e.Message>;
}
